<root columns='8'>
  <layout>
	<element type='information' fullwidth='true'>
		<source>
			<data name='_information'/>
		</source>
	</element>
	<element type='text' nls='user' wizzard='user_select'>
      <source>
		<data name='my.user'/>
	  </source>	
	</element>
	<element type='password' nls='password'>
      <source>
		<data name='my.password'/>
	  </source>
	</element>
	<split>
      <layout>
		<composite>
		  <layout>
			<element type='text' nls='text1'>
		      <sources>
				<data name='text1'/>
<!-- 
				<visible name='text1.visible'/>
				<enabled name='text1.enabled'/>
				<title name='text1.title'/>
 -->				
		      </sources>
			</element>
			<composite type='group' nls='group'>
				<layout>
					<element type='checkbox' nls='text1'>
		    		  <sources>
						<data name='checkbox1'/>
					  </sources>
					</element>
					<element type='checkbox' nls='text1'>
				      <sources>
						<data name='checkbox1'/>
					  </sources>
					</element>
				</layout>
			</composite>
		  </layout>
		</composite>
		<composite>
		  <layout>
			<element type='text' nls='text2'>
				<sources>
					<data name='text2'/>
				</sources>
			</element>
			<element type='text' nls='text2again'>
				<sources>
					<data name='text2'/>
				</sources>
			</element>
			<element type='combobox' nls='select'>
				<sources>
					<options name='select_options'/>
					<data name='select'/>
				</sources>
			</element>
			<element type='text' nls='select'>
				<sources>
					<data name='select'/>
				</sources>
			</element>
			<element type='date' nls='date'>
				<sources>
					<data name='date'/>
				</sources>
			</element>
			<element type='text' nls='date'>
				<sources>
					<data name='date'/>
				</sources>
			</element>
			<element type='number' nls='number_int'>
				<sources>
					<data name='number_int'/>
				</sources>
			</element>
			<element type='number' nls='number_int' format='PERCENTAGE'>
				<sources>
					<data name='number_int'/>
				</sources>
			</element>
		  </layout>
		</composite>
	  </layout>
	</split>
	<actions>
		<actions nls='actions'>
			<primary nls="ok"/>
			<cancel nls="cancel"/>
			<other nls="other"/>
		</actions>
	</actions>
	<element type='richtext' nls='description' fullwidth='true'>
		<sources>
			<data name='description'/>
		</sources>
	</element>
  </layout>
</root>